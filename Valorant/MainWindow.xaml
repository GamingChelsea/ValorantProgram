<Window x:Class="Valorant.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:Valorant"
       mc:Ignorable="d"        
       Loaded="Window_Loaded"
       Title="Valorant" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="StatsBox" Text="Willkommen zu Valorant Stats!" Margin="0,80,0,0"/>
        <TextBox x:Name="PlayerNameInput" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Gebe deinen Valorant Namen ein:" VerticalAlignment="Top" Width="560" Height="80" FontSize="36" TextAlignment="Center"/>
        <Button x:Name="BTN" Content="Button" HorizontalAlignment="Left" Margin="560,0,0,0" VerticalAlignment="Top" Height="80" Width="240" Click="BTN_Click"/>
    </Grid>
</Window>
